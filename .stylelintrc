{
  "extends": "stylelint-config-recommended",
  "ignoreFiles": ["**/*.@(js|jsx|ts|tsx)"],
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "tailwind",
        "apply",
        "variants",
        "responsive",
        "screen",
        "layer"
      ]
    }],
    "block-no-empty": null,
    "unit-whitelist": ["em", "rem", "s"]
  }
}
